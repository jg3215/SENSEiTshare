<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/user3button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/user1button"
            android:layout_below="@+id/user1button"
            android:layout_marginTop="37dp"
            android:background="@drawable/user4"
            android:onClick="user3button" />

        <Button
            android:id="@+id/user2button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/user1button"
            android:layout_alignEnd="@+id/user4button"
            android:layout_alignTop="@+id/user1button"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/user1button"
            android:background="@drawable/user1"
            android:onClick="user2button" />

        <Button
            android:id="@+id/user1button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/ChooseProfile"
            android:layout_marginStart="50dp"
            android:layout_marginTop="71dp"
            android:background="@drawable/user2"
            android:onClick="user1button" />

        <Button
            android:id="@+id/user4button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/user3button"
            android:layout_marginStart="29dp"
            android:layout_toEndOf="@+id/user3button"
            android:background="@drawable/user3"
            android:onClick="user4button" />


        <TextView
            android:id="@+id/ChooseProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="56dp"
            android:layout_weight="1"
            android:text="Choose Profile"
            android:fontFamily="@font/avenirltstd_light"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            tools:layout_editor_absoluteX="300dp"
            tools:layout_editor_absoluteY="101dp" />

        <TextView
            android:id="@+id/text_user1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/user1button"
            android:layout_below="@+id/user1button"
            android:layout_toStartOf="@+id/user2button"
            android:fontFamily="@font/avenirltstd_light"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_user2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/user2button"
            android:layout_alignStart="@+id/user2button"
            android:layout_below="@+id/user2button"
            android:fontFamily="@font/avenirltstd_light"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_user3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/user3button"
            android:layout_alignStart="@+id/text_user1"
            android:layout_below="@+id/user3button"
            android:fontFamily="@font/avenirltstd_light"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_user4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/user4button"
            android:layout_alignStart="@+id/text_user2"
            android:layout_below="@+id/user3button"
            android:fontFamily="@font/avenirltstd_light"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


    </RelativeLayout>

</LinearLayout>
