<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Heart Rate"
            android:textAlignment="center"
            android:textColor="?attr/colorControlActivated"
            android:textSize="@dimen/_30ssp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="visible"
            android:fontFamily="@font/AvenirLTStd-Light"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <ImageButton
            android:id="@+id/connectblueheart"
            android:layout_width="@dimen/_306sdp"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:background="@null"
            android:backgroundTint="@android:color/background_light"
            android:elevation="0dp"
            android:onClick="connectblueheartclick"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/connect" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/heartrategraph" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_44sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="BPM: XX"
            android:textAlignment="center"
            android:textSize="@dimen/_30ssp"
            android:fontFamily="@font/AvenirLTStd-Light"/>

    </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/messageWindow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="@dimen/_12ssp"
                android:fontFamily="@font/AvenirLTStd-Light"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"/>

        </RelativeLayout>



</LinearLayout>

