<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
 >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_66sdp"
            android:lineSpacingExtra="@dimen/_90ssp"
            android:text="Blood Oxygenation"
            android:layout_marginTop="@dimen/_10sdp"
            android:textAlignment="center"
            android:fontFamily="@font/avenirltstd_light"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/holo_orange_dark"
            android:textSize="@dimen/_30ssp"
            android:visibility="visible" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/redstartbutton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_43sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:adjustViewBounds="false"
            android:background="@null"
            android:onClick="connectblueheartclick"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/instructorange" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_178sdp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/o2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="%: XX.X %"
            android:textAlignment="center"
            android:fontFamily="@font/avenirltstd_light"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="@dimen/_30ssp" />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/messageWindow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/avenirltstd_light"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"/>

        </RelativeLayout>


    </ScrollView>



</LinearLayout>

