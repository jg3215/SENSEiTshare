<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/o2button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignStart="@+id/heartratebutton"
            android:layout_below="@+id/heartratebutton"
            android:layout_marginTop="37dp"
            android:background="@drawable/o2button"
            android:onClick="o2click" />

        <Button
            android:id="@+id/lungcapacitybutton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/heartratebutton"
            android:layout_alignEnd="@+id/no2button"
            android:layout_alignTop="@+id/heartratebutton"
            android:layout_marginStart="28dp"
            android:layout_toEndOf="@+id/heartratebutton"
            android:background="@drawable/lungbutton"
            android:onClick="lungcapacityclick" />

        <Button
            android:id="@+id/heartratebutton"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bluetoothstatus"
            android:layout_marginStart="@dimen/_55sdp"
            android:layout_marginTop="@dimen/_100sdp"
            android:background="@drawable/heartratebutton"
            android:onClick="heartrateclick" />

        <Button
            android:id="@+id/no2button"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_alignBottom="@+id/o2button"
            android:layout_marginStart="29dp"
            android:layout_toEndOf="@+id/o2button"
            android:background="@drawable/no2button"
            android:onClick="no2click" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/heartratebutton"
            android:layout_alignStart="@+id/heartratebutton"
            android:layout_below="@+id/heartratebutton"
            android:fontFamily="@font/avenirltstd_light"
            android:text="Heart Rate"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/lungcapacitybutton"
            android:layout_alignStart="@+id/lungcapacitybutton"
            android:layout_below="@+id/lungcapacitybutton"
            android:fontFamily="@font/avenirltstd_light"
            android:text="Lung Capacity"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/o2button"
            android:layout_alignStart="@+id/textView5"
            android:layout_below="@+id/o2button"
            android:fontFamily="@font/avenirltstd_light"
            android:text="Blood Oxygen"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/no2button"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/o2button"
            android:fontFamily="@font/avenirltstd_light"
            android:text="Nitric Oxide"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="22dp"
            android:fontFamily="@font/avenirltstd_light"
            android:text="Please choose one of the parameters to measure:"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_20ssp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/avenirltstd_light"
            android:onClick="viewdataclick"
            android:text="View Data History"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>