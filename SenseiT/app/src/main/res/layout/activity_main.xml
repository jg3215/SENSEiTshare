<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.33"
        android:background="@drawable/gradient"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView"
            android:layout_width="335dp"
            android:layout_height="93dp"
            android:text="Main Menu"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_45ssp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.612"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.057"
            tools:layout_editor_absoluteX="16dp" />

        <ImageButton
            android:id="@+id/heartratebutton"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_124sdp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/heartratebutton"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/lungcapacitybutton"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginRight ="21dp"
            android:layout_marginTop="@dimen/_124sdp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/lungbutton"
            android:background="@null"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <ImageButton
            android:id="@+id/o2button"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft ="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_124sdp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.796"
            app:srcCompat="@drawable/o2button"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/no2button"
            android:layout_width="@dimen/_135sdp"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginBottom="@dimen/_26sdp"
            android:layout_marginRight ="@dimen/_17sdp"
            android:layout_marginTop="@dimen/_124sdp"
            android:scaleType="fitXY"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/no2button"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.877"
            android:background="@null"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>